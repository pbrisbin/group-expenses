<div class="group">
  <h4 class="subheader"><%= group.name %></h4>
  <div class="situation">
    <% debts = Debts.new(group) %>

    <% debts.owed_by(current_user).each do |debt| %>
      <p>You owe <%= debt.owee %> $<%= debt.amount %></p>
    <% end %>

    <% debts.owed_to(current_user).each do |debt| %>
      <p><%= debt.ower %> owes you $<%= debt.amount %></p>
    <% end %>
  </div>

  <div class="actions">
    <%= link_to "New expense", new_expense_path(:group_id => group.id) %> | 
    <%= link_to "Join link", new_membership_url(:token => group.join_token) %> | 
    <%= link_to "Leave group", "#" %>
  </div>
</div>
